{
    "tabWidth": 4,
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.css", "*.scss", "*.mjs"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.jsx", "*.js", "*.tsx", "*.ts"],
            "options": {
                "tabWidth": 4
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"]
}
